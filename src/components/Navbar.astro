---
import GlowingBtn from "./GlowingBtn.astro";
---

<nav>
  <div class="mindplex__logo">
    <a href="/">
      <img src="/logo.svg" alt="Mindplex" width=" 292" />
    </a>
  </div>
  <div class="navbar_center">
    <a href="#about">About</a>
    <a href="#ourAi">Our Ai</a>
    <a href="#mindplexTokens">Mindplex Tokens</a>
    <a href="/blog">Blog</a>
    <a href="#team">team</a>
  </div>
  <div class="navbar_right">
    <a
      href="https://magazine.mindplex.ai/contact-editors"
      class="navbar_right_contact">contact us</a
    >
    <GlowingBtn
      text="Join Mindplex"
      href="https://magazine.mindplex.ai/?type=register"
      fontSize="12px"
      class:list={"margin-top:0"}
    />
  </div>
</nav>

<style>
  nav {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: center;
    gap: 24px;
    margin: 14px 24px;
  }
  .mindplex__logo img {
    width: 180px;
  }
  .navbar_center {
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    align-items: center;
    gap: 14px;
  }

  .navbar_center a {
    font-weight: 700;
    font-size: 12px;
    line-height: 15px;
    text-transform: uppercase;
  }

  .navbar_right {
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    align-items: center;
    gap: 24px;
    text-transform: uppercase;
  }

  .navbar_right a {
    font-weight: 700;
    font-size: 12px;
    line-height: 15px;
    border-radius: 40px;
  }

  .navbar_right_contact {
    /* padding: 17px 34px; */
    min-width: 114px;
    padding: 10px 16px;
    outline: 2px solid #fff;
  }

  .navbar_right_join {
    padding: 10px 16px;
    background: #ff8b92;
    box-shadow: 0px 0px 29px #ff3f84;
    color: #343045;
  }
  @media screen and (min-width: 768px) {
    nav {
      flex-direction: row;
    }
    .mindplex__logo img {
      width: 270px;
    }
  }
  @media screen and (min-width: 952px) {
    nav,
    section {
      margin: 66px 84px;
    }

    nav {
      flex-direction: row;
    }

    .navbar_center {
      gap: 44px;
    }
  }
</style>
