---
const { url, title, image, description } = Astro.props;
---

<a class="card" href=`/blog/${url}`>
  <div class="left">
    <span>18 hr ago</span>
    <h1>{title}</h1>
    <p>{description}</p>
  </div>
  <img class="card-img" src={image} alt="title" />
</a>
<style>
  .card {
    display: flex;
    justify-content: space-between;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    background: linear-gradient(
      180deg,
      rgba(67, 61, 96, 0.25) 0%,
      rgba(73, 255, 179, 0.25) 100%
    );
    border-radius: 10px;
    max-width: 580px;
    cursor: pointer;
    width:100%
  }
  .card-img {
    width: 100%;
    height: 100%;
    max-width: 265px;
    max-height: 274px;
    border-radius: 0px 10px 10px 0px;
  }
  .left {
    display: flex;
    flex-direction: column;
    padding: 26px 13px;
  }
  .left span {
    font-size: 15px;
    color: var(--gray-6, #f2f2f2);
  }
  .left h1 {
    font-size: 20px;
    margin-top: 20px;
  }
  .left p {
    font-size: 14px;
    margin-top: 20px;
    font-family: Montserrat;
    font-weight: 400;
    color: var(--gray-6, #f2f2f2);
  }

  @media screen and (max-width: 768px) {
   .card{
    display: flex;
    flex-direction: column-reverse;
   }
   .card-img{
    max-width:100%
   }

  }

</style>
