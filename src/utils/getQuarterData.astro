export const getQuarterData = async (
  quarter: "Q4_2023" | "Q2_2024" | "Q4_2025"
) => {
  const globs = {
    Q4_2023: Astro.glob("../content/roadmap/Q1/*.md"),
    Q2_2024: Astro.glob("../content/roadmap/Q3/*.md"),
    Q4_2025: Astro.glob("../content/roadmap/Q4/*.md"),
  };

  try {
    const files = await globs[quarter];
    return files.map((file) => ({
      ...file.frontmatter,
    }));
  } catch (error) {
    console.error("Error loading markdown files:", error);
    return [];
  }
};
