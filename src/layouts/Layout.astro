---
import Footer from "../components/Footer.astro";
import ModalForm from "../components/Modal/ModalForm.astro";
import Navbar from "../components/Navbar.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Mindplex" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logoFav.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <ModalForm />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --accent: 73, 255, 179;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #052f46 30%,
      white 60%
    );
  }
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  html {
    font-family: "Montserrat", sans-serif;
    background: linear-gradient(180deg, #052f46 0%, #1e253d 100%), #302c42;
    color: #fff;
    scroll-behavior: smooth;
  }
  a {
    text-decoration: none;
    color: inherit;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  main {
    margin: 21px;
  }

  @media screen and (min-width: 600px) {
    main {
      margin: 81px;
      max-width: 1655px;
    }
  }
  @media screen and (min-width: 1800px) {
    main {
      margin: auto;
    }
  }
</style>
